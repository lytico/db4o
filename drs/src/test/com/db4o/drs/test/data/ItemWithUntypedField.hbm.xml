<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field" default-lazy="false">
	<class name="com.db4o.drs.test.data.ItemWithUntypedField">
		<id column="typed_id" type="long">
			<generator class="native"/>
		</id>

		<property name="name" column="name"/>
		<property name="points" column="points"/>
		
		<primitive-array name="arr" table="arr">
			<key column="pilotID" />
			<list-index column="sortOrder" />
			<element column="arr" type="int" />
		</primitive-array>
		
	</class>
</hibernate-mapping>
